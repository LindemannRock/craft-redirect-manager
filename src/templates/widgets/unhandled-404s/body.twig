<div class="unhandled-404s-widget">
    {% if stats|length > 0 %}
        <table class="data fullwidth">
            <thead>
                <tr>
                    <th>{{ "URL"|t('redirect-manager') }}</th>
                    <th>{{ "Count"|t('redirect-manager') }}</th>
                    <th class="thin"></th>
                </tr>
            </thead>
            <tbody>
                {% for stat in stats %}
                    <tr>
                        <td>
                            <div class="url-cell">
                                <code class="url-path" title="{{ stat.url }}">
                                    {{ stat.url|length > 25 ? stat.url|slice(0, 25) ~ '...' : stat.url }}
                                </code>
                                {% if stat.lastHit %}
                                    <div class="last-hit">
                                        {{ "Last seen"|t('redirect-manager') }}: {{ stat.lastHit|datetime('short') }}
                                    </div>
                                {% endif %}
                            </div>
                        </td>
                        <td class="count-cell">
                            <span class="badge">{{ stat.count|number }}</span>
                        </td>
                        <td class="thin actions-cell">
                            <a href="{{ cpUrl('redirect-manager/statistics') }}#url-{{ stat.url|url_encode }}"
                               class="btn small"
                               title="{{ 'View details'|t('redirect-manager') }}">
                                {{ svg('@app/icons/arrow-right.svg') }}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="widget-footer">
            <a href="{{ cpUrl('redirect-manager/statistics') }}" class="go">{{ "View all 404s"|t('redirect-manager') }}</a>
        </div>
    {% else %}
        <div class="zilch">
            <p>{{ "No unhandled 404s"|t('redirect-manager') }}</p>
            <p class="light">{{ "Great! All 404s are being handled by redirects."|t('redirect-manager') }}</p>
        </div>
    {% endif %}
</div>

<style>
.unhandled-404s-widget {
    padding: 0;
}

.unhandled-404s-widget table {
    margin-bottom: 0;
}

.unhandled-404s-widget table td {
    vertical-align: top;
}

.url-cell {
    min-width: 0;
    max-width: 180px;
    overflow: hidden;
}

.url-path {
    background: #fef2f2;
    color: #dc2626;
    padding: 2px 6px;
    border-radius: 3px;
    font-size: 11px;
    display: block;
    margin-bottom: 4px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.last-hit {
    font-size: 10px;
    color: #9ca3af;
}

.count-cell {
    text-align: left;
    white-space: nowrap;
}

.count-cell .badge {
    background: #fef2f2;
    color: #dc2626;
    padding: 10px;
    border-radius: 3px;
    font-size: 13px;
    font-weight: 600;
    display: inline-block;
    line-height: 0;
}

.actions-cell {
    text-align: right;
    white-space: nowrap;
}

.actions-cell .btn {
    padding: 4px 8px;
    min-height: auto;
}

.actions-cell .btn svg {
    width: 14px;
    height: 14px;
}

.widget-footer {
    text-align: center;
    padding: 12px;
    border-top: 1px solid #e3e5e8;
}

.widget-footer .go {
    font-size: 13px;
}

.zilch {
    text-align: center;
    padding: 40px 20px;
}

.zilch p {
    margin-bottom: 8px;
}
</style>
