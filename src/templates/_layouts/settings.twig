{% extends "_layouts/cp" %}

{% set title = title ?? 'Settings'|t('redirect-manager') %}
{% set selectedSettingsItem = selectedSettingsItem ?? 'general' %}
{% set selectedSubnavItem = 'settings' %}

{% block sidebar %}
    <nav id="settings-nav">
        <ul>
            <li>
                <a href="{{ url('redirect-manager/settings/general') }}" {% if selectedSettingsItem == 'general' %}class="sel"{% endif %} data-nav-item="general">
                    {{ 'General'|t('redirect-manager') }}
                </a>
            </li>
            <li>
                <a href="{{ url('redirect-manager/settings/statistics') }}" {% if selectedSettingsItem == 'statistics' %}class="sel"{% endif %} data-nav-item="statistics">
                    {{ 'Statistics'|t('redirect-manager') }}
                </a>
            </li>
            <li>
                <a href="{{ url('redirect-manager/settings/advanced') }}" {% if selectedSettingsItem == 'advanced' %}class="sel"{% endif %} data-nav-item="advanced">
                    {{ 'Advanced'|t('redirect-manager') }}
                </a>
            </li>
            <li>
                <a href="{{ url('redirect-manager/settings/test') }}" {% if selectedSettingsItem == 'test' %}class="sel"{% endif %} data-nav-item="test">
                    {{ 'Test'|t('redirect-manager') }}
                </a>
            </li>
        </ul>
    </nav>
{% endblock %}

{% css %}
    /* Prevent scroll-based highlighting */
    #settings-nav a {
        transition: none;
    }

    /* Ensure only the current page link is highlighted */
    #settings-nav a.sel {
        cursor: default;
    }
{% endcss %}
